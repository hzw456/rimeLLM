{
  "name": "rime-ai-clipboard",
  "version": "0.1.0",
  "description": "AI 剪切板 - 智能输入增强工具",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "python3 -m uvicorn backend.main:app --reload --port 8000",
    "dev:frontend": "cd client && npm run dev",
    "install:backend": "pip install -r requirements.txt",
    "package": "electron-builder --mac"
  },
  "build": {
    "appId": "com.rime-ai-clipboard",
    "productName": "AI 剪切板",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    }
  },
  "keywords": ["rime", "ai", "clipboard", "input"],
  "author": "rime-ai",
  "license": "MIT"
}
